@page "/weather"
@using System.Globalization

<PageTitle>Погода</PageTitle>

<h1>Погода</h1>

<p>Этот компонент показывает погоду.</p>

<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="card-title">Пример данных</h5>
        <p class="card-text">Температура: @temperature.ToString("F") °C</p>
        <p class="card-text">Влажность: @humidity %</p>
        <p class="card-text">Состояние: @weatherCondition</p>
    </div>
</div>

@code {
    private double temperature = 22.5;
    private int humidity = 65;
    private string weatherCondition = "Облачно";
}